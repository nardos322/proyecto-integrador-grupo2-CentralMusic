<!DOCTYPE html>
<html lang="en">
<%-include('../partials/head', {title: 'Editar datos'}) %> 
<body class="home-container forms-body admin-container">
    <%-include('../partials/header') %>
        <main>
            <form action="/users/profile?_method=PUT" method="POST" enctype="multipart/form-data" class="form-addProduct" id="form-editProfile">
                <div class="form-container1">
                    <div class="new-products-separador"></div>
                    <h2>Edit personal data: <%= user.name %></h2>
                    <div class="inputs-container1">
                       
                        <div class="input-container1">
                            <label for="name">Name</label>
                            <input type="text" name="name" id="name" placeholder="David" class="input-style1" value="<%= user.name %>">
                            <% if (locals.errors && errors.name) { %>
                                <span class="error-message1 error-msg-register"><%= errors.name.msg %></span>
                            <% } %>
                            <div class="errors">
                                <small id="nameError"></small>
                            </div>
                        </div>
                        <div class="input-container1">
                            <label for="lastname">Lastname</label>
                            <input type="text" name="lastname" id="lastname" placeholder="Gilmour" class="input-style1" value="<%= user.last_name %>">
                            <% if (locals.errors && errors.lastname) { %>
                                <span class="error-message1 error-msg-register"><%= errors.lastname.msg %></span>
                            <% } %>
                            <div class="errors">
                                <small id="lastnameError"></small>
                            </div>
                        </div>
                        <div class="profile-preview-container">
                            <div class="profile-container">
                                <img src="../../images/avatars/<%= user.avatar  %> " alt="">
                            </div>
                        </div>
                       
                        <div class="input-container1 file-container">
                            <label for="avatar"  class="btn-file">Change Avatar</label>
                            <input type="file" name="avatar" id="avatar" accept=".png, .jpg, .jpeg, .gif" class="file">
                            <div class="errors">
                                <small id="avatarError"></small>
                            </div>
                        </div>
                        <div class="btn-container">
                            <button class="btn-register" type="submit" >Save</button>
                            <small id="submitError"></small>
                        </div>
                    </div>
                </div>
            </form>
        </main>
    <%-include('../partials/footer') %> 
    <script src="/scripts/editProfileValidator.js"></script>
</body>
</html>