<!DOCTYPE html>
<html lang="en">
    <%-include('../partials/head', {title: "Home"})  %> 
<body class="home-container">
    <%-include('../partials/header')  %> 
    <main class="main-index">
        <section class="new-products products">
            <% pedals.forEach(pedal => { %>
               
                    <article>
                        <a href="/products/detail/<%- pedal.id %> ">
                            <div class="product-container">
                                <div class="img-container">
                                    <img src="/images/products/<%- pedal.productsImages[0].name_image %>" alt="producto-guitarra">
                                </div>
                                <div class="description-container">
                                    <div class="guitar-precio">
                                        <h4><%- pedal.name %> </h4>
                                        <p>$<%- pedal.price %> </p>
                                    </div>
                                    <p class="description"><%- pedal.description %> </p>
                                    <p><b>0</b> Colores available</p>
                                </div>
                            </div>
                        </a>
                    </article>
               
                
             <% }) %>
        </section>

    </main>
    <%-include('../partials/footer')  %> 
</body>
</html>